package week02

object exercise3 {
  def product(f: Int => Int)(a: Int, b: Int): Int = {
    if (a > b) 1
    else f(a) * product(f)(a + 1, b)
  }                                               //> product: (f: Int => Int)(a: Int, b: Int)Int
  
  product(x => x * x) (3, 4)                      //> res0: Int = 144
  
  def factorial(a: Int) = product(1, a) 
}
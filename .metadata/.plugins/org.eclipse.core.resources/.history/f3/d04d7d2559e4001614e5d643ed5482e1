package week02

object rationals {
  val x = new Rational(1, 2)                      //> x  : week02.Rational = week02.Rational@1376c05c
  x.numer                                         //> res0: Int = 1
  x.denom                                         //> res1: Int = 2
  
  val y = new Rational(2, 3)                      //> y  : week02.Rational = week02.Rational@7a79be86
  x.add(y)                                        //> res2: week02.Rational = week02.Rational@34ce8af7
}

class Rational(x: Int, y: Int) {
  def numer = x
  def denom = y

  def add(that: Rational) =
    new Rational(
    numer * that.numer + denom * that.denom,
    denom * that.denom)
}
package week02

object exercise {
  def recursiveFactorial(n: Int): Int =
    if (n == 0) 1 else n * recursiveFactorial(n - 1)

  def tailRecursiveFactorial(n: Int): Int = {
    def loop(acc: Int, n: Int): Int =
      if (n == 0) acc
      else loop(acc * n, n - 1) 
    
    loop(1, n)
  }
  
  recursiveFactorial(4)
  tailRecursiveFactorial(4)
}